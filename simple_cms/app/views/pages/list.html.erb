

<div class="page list">
	<%= link_to("Add New Page", {:action => 'new'}, :class=> 'action new') %>
	
	<h2>Pages</h2>
	
	<table class="listing" summary="Subject list">
		<tr>
			<th>&nbsp;</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Belongs To</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.name %></td>
			<td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
			<td class="center"></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action detete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>